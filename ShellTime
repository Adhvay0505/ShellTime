#!/bin/bash

# Colors for styling (adjust as needed)
YELLOW='\033[1;33m'
NC='\033[0m'

while :; do
    clear
    # Get terminal width and height
    width=$(tput cols)
    height=$(tput lines)

    # Get date, time, weekday
    date_str=$(date +"%d-%m-%y")
    day_str=$(date +"%A")
    time_str=$(date +"%T" | figlet)

    # Count lines in figlet output to center vertically
    clock_lines=$(echo "$time_str" | wc -l)

    # Calculate vertical positions
    total_blocks=$((2 + clock_lines + 1))  # 2 blank lines for spacing, +1 for week day
    top_padding=$(( (height - total_blocks) / 2 ))
    [ $top_padding -lt 0 ] && top_padding=0

    # Print blank lines for vertical centering
    for ((i=0; i<top_padding; i++)); do echo; done

    # Center and print date at the top
    printf "%*s\n" $(( (width + ${#date_str}) / 2 )) "$date_str"
    echo

    # Center and print each line of the figlet clock
    echo -e "${YELLOW}"
    while IFS= read -r line; do
        len=${#line}
        pad=$(( (width - len) / 2 ))
        [ $pad -lt 0 ] && pad=0
        printf "%*s%s\n" $pad "" "$line"
    done <<< "$time_str"
    echo -e "${NC}"

    echo

    # Center and print weekday below the clock
    printf "%*s\n" $(( (width + ${#day_str}) / 2 )) "$day_str"

    # Sleep and loop
    sleep 1
done

